<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">	<!-- 配置提示需要uri -->

<!-- 

  This mapping demonstrates 

-->

<hibernate-mapping>
	<!-- name为实体类的全路径，table为表名 -->
	<class name="com.project.bean.UserBean" table="t_user">
		<!-- 配置主键，name表示属性名，column表示列名。如果属性名和列名一致，可以省去column -->
		<id name="id">
			<!-- 主键生成策略：class="native"表示利用数据库表的自动增长列，填充主键 -->
			<generator class="native"></generator>
		</id>
		<!-- 配置普通属性 -->
		<property name="name" column="userName"></property>
		<property name="money"></property>
		<property name="sex"></property>
		<property name="birthday"></property>
		<property name="job"></property>
	</class>
</hibernate-mapping>